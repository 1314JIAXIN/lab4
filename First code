<!DOCTYPE html>
<html>
<head>
<script>
var dices=new Array();
var num=0;
var One=0;
var Two=0;
var Three=0;
var Four=0;
var Five=0;
var Six=0;

//get six random value
for(var i=0;i<6;i++){
    for(var j=0;;j++){
         num=Math.random()*10;
         if(num>1&&num<7) 
             break;
    }
    num=Math.floor(num);
    dices[i]=num;
}

//determine the number of all dices
for(var i=0;i<dices.length;i++){
    if(dices[i]==1){
         One=One+1;
    }else if(dices[i]==2){
         Two=Two+1;
    }else if(dices[i]==3){
         Three=Three+1;
    }else if(dices[i]==4){
         Four=Four+1;
    }else if(dices[i]==5){
         Five=Five+1;
   }else if(dices[i]==6){
         Six=Six+1;
   }
}
